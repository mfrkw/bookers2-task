

<div class="info">
  <h1>User info</h1>
  <div class="profile-container">
  <%= attachment_image_tag user, :profile_image, :fill, 90, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  </div>

      <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= user.introduction %></td>
            </tr>
          </tbody>
      </table>
            <%= link_to edit_user_path(user.id) do %>
            <button type="button" class="btn btn-outline-secondary w-100">
            <i class="fas fa-user-cog"></i>
            </button>
            <% end %>


    <h2>New book</h2>
      <%= form_for(@book) do |f| %>
          <label>Title</label>
      <br>
          <%= f.text_field :title, class: "col-md-12 book_title" %>
      <br>
          <label>opinion</label>
      <br>
          <%= f.text_area :body, class: "col-md-12 book_body" %>
      <br>
      <br>
      <br>
      <div class="actions">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>

      <% end %>
  </div>
