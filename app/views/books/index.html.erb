<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
    <% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
        <% end %>
    </ul>  
     <% end %>
     
     <%= render 'books/list', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
		 <table class="table table-hover table-inverse">
		      <thead>
		        <tr align="center">
		          <th></th>
		          <th>title</th>
		          <th>opinion</th>
		          <th colspan="3"></th>
		        </tr>
		    	</thead>
		    	<tbody>
		    	  <% @books.each do |book| %>
		    	  <tr>
		    	     <td><%= link_to user_path(book.user_id) do %></td>
		    	     <td><%= attachment_image_tag(book.user, :profile_image, :fill, 90, 100,fallback: "no_image.jpg" ) %></td>
	              <% end %>
	              <td><%= link_to book.title, book_path(book.id) %></td>
				        <td><%= book.body %></td>
		    	  </tr>
		    	          <% end %>
		    	</tbody>          
		    </table>
	  </div>
	</div>	    
</div>		